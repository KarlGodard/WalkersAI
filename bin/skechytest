#!/bin/bash
# insta485test

# Stop on errors
# prints commands
# See https://vaneyckt.io/posts/safer_bash_scripts_with_set_euxo_pipefail/
set -Eeuo pipefail
set -x

pycodestyle skechy

pydocstyle skechy

pylint --disable=cyclic-import --unsafe-load-any-extension=y --disable=assigning-non-slot skechy

pytest -v tests -vv
npx eslint skechy/js/post.jsx
npx eslint --ext jsx skechy/js/